<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.Overview">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Weekly Summary"/>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:layout_marginBottom="10dp" android:layout_marginTop="10dp">
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">


            <TextView android:text="7" android:layout_gravity="center_horizontal"
                android:textSize="16pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/g_overview_remainingDaysWeekTxt"/>
            <TextView android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days left"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">


            <TextView android:text="$1000" android:layout_gravity="center_horizontal"
                android:textSize="16pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/g_overview_remainingBudgetWeekTxt"/>
            <TextView android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining budget"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">


            <TextView android:text="$1000" android:layout_gravity="center_horizontal"
                android:textSize="16pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/g_overview_averageWeekTxt"/>
            <TextView android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average/day"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Monthly Summary"/>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:layout_marginBottom="4dp" android:layout_marginTop="10dp">
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">


            <TextView android:text="7" android:layout_gravity="center_horizontal"
                android:textSize="16pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/g_overview_remainingDaysMonthTxt"/>
            <TextView android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days left"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">


            <TextView android:text="$1000" android:layout_gravity="center_horizontal"
                android:textSize="16pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/g_overview_remainingBudgetMonthTxt"/>
            <TextView android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining budget"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">


            <TextView android:text="$1000" android:layout_gravity="center_horizontal"
                android:textSize="16pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/g_overview_averageMonthTxt"/>
            <TextView android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average/day"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:layout_marginBottom="10dp" android:layout_marginTop="10dp">
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="01">


            <TextView android:text="$100" android:layout_gravity="center_horizontal"
                android:textSize="16pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/g_overview_remainingCatstropheTxt"/>
            <TextView android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining catastrohpe"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
