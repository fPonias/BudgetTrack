<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button android:layout_width="42dp" android:layout_height="36dp"
            android:text="&lt;&lt;" android:id="@+id/g_overview_skipback_month_btn" />
        <Button android:layout_width="36dp" android:layout_height="36dp"
            android:text="&lt;" android:id="@+id/g_overview_skipback_week_btn" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Week 1" android:id="@+id/g_overview_skip_dateWeeklbl"
            android:paddingLeft="10dp" android:paddingRight="10dp" />
        <Button android:layout_width="36dp" android:layout_height="36dp"
            android:text="&gt;" android:id="@+id/g_overview_skip_week_btn" />
        <Button android:layout_width="42dp" android:layout_height="36dp"
            android:text="&gt;&gt;" android:id="@+id/g_overview_skip_month_btn" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="01/01/16" android:id="@+id/g_overview_startDateLbl"
            android:paddingRight="10dp" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="01/07/16" android:id="@+id/g_overview_endDateLbl"
        />
    </LinearLayout>
</LinearLayout>