<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView android:layout_height="wrap_content" android:layout_width="match_parent"
            android:text="Spending Summary" android:layout_margin="20dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold" android:textSize="8pt"/>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/g_chart_spendingPie"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>
        <TextView android:layout_height="wrap_content" android:layout_width="match_parent"
            android:text="Total Spending Summary" android:layout_margin="20dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold" android:textSize="8pt"/>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/g_chart_totalSpendingPie"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>
        <TextView android:layout_height="wrap_content" android:layout_width="match_parent"
            android:text="Monthly Spending"  android:layout_margin="20dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold" android:textSize="8pt"/>
        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/g_chart_mainChart"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>
        <TextView android:layout_height="wrap_content" android:layout_width="match_parent"
            android:text="Weekly Spending"  android:layout_margin="20dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold" android:textSize="8pt"/>
        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/g_chart_mainChartWeekly"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>
        <View android:layout_height="20dp" android:layout_width="match_parent" />
    </LinearLayout>
</ScrollView>