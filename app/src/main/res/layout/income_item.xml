<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="34dp" android:weightSum="1">
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_delete"
        android:id="@+id/g_income_listitem_deleteBtn" android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Amount"
        android:id="@+id/g_income_listitem_amountTxt" android:layout_weight="0.35" android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Description"
        android:id="@+id/g_income_listitem_descTxt" android:layout_weight="0.45"
        android:layout_gravity="center_vertical"/>
</LinearLayout>