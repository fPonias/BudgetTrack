<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monthly Income"
        android:id="@+id/g_settings_monthlyIncomeLbl"
        android:paddingTop="6dp"
        android:layout_above="@+id/g_settings_monthlyExpensesLbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monthly Expenses"
        android:id="@+id/g_settings_monthlyExpensesLbl"
        android:layout_below="@+id/g_settings_monthlyIncomeTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/g_settings_monthlyExpensesTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emergency Fund"
        android:id="@+id/g_settings_emergencyFundLbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/g_settings_emergencyFundTxt"
        android:layout_below="@+id/g_settings_monthlyExpensesLbl" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/g_settings_monthlyIncomeTxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/g_settings_monthlyExpensesLbl"
        android:layout_toEndOf="@+id/g_settings_monthlyExpensesLbl" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/g_settings_monthlyExpensesTxt"
        android:layout_below="@+id/g_settings_monthlyIncomeTxt"
        android:layout_toRightOf="@+id/g_settings_monthlyExpensesLbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/g_settings_emergencyFundTxt"
        android:layout_below="@+id/g_settings_monthlyExpensesLbl"
        android:layout_toRightOf="@+id/g_settings_monthlyExpensesLbl"
        android:layout_toEndOf="@+id/g_settings_monthlyExpensesLbl" />

</RelativeLayout>