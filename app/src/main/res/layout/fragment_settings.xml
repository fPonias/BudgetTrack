<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emergency Fund"
        android:id="@+id/g_settings_emergencyFundLbl"
        android:layout_alignBottom="@+id/g_settings_emergencyFundTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/g_settings_emergencyFundTxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backup database"
        android:id="@+id/g_settings_backupDB"
        android:layout_below="@+id/g_settings_emergencyFundLbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restore Database"
        android:id="@+id/g_settings_restoreDB"
        android:layout_alignBottom="@+id/g_settings_backupDB"
        android:layout_toRightOf="@+id/g_settings_backupDB"
        android:layout_toEndOf="@+id/g_settings_backupDB" />

</RelativeLayout>